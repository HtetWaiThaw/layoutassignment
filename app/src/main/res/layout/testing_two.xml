<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/holo_red_dark"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/IMGOne"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:src="@drawable/bruno"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/Text1"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/Text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAYER NAME"
        android:layout_marginTop="60dp"
        app:layout_constraintLeft_toRightOf="@+id/IMGOne"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/IMGTwo"
        android:src="@drawable/overview"
        android:layout_width="220dp"
        android:layout_height="220dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IMGOne" />


    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="ATTRIBUTE OVERVIEW"
        app:layout_constraintLeft_toRightOf="@+id/IMGTwo"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toBottomOf="@+id/IMGOne"/>

<linearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MORE INFO"
        android:background="@android:color/holo_green_dark"
        app:layout_constraintTop_toBottomOf="@+id/IMGTwo"
        app:layout_constraintLeft_toLeftOf="@id/BT1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="75dp"/>
    <Button
        android:id="@+id/BT1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="back"
        android:background="@android:color/holo_green_dark"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/BT2"
        app:layout_constraintTop_toBottomOf="@+id/IMGTwo" />

    <Button
        android:id="@+id/BT2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT"
        android:background="@android:color/holo_green_dark"
        app:layout_constraintBaseline_toBaselineOf="@+id/BT1"
        app:layout_constraintLeft_toRightOf="@+id/BT1"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>