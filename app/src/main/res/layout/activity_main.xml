<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Say Hello"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/andriodButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Androd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/andriodButton" />

<!--    <Button-->
<!--        android:id="@+id/text"-->
<!--        android:layout_width="106dp"-->
<!--        android:layout_height="0dp"-->
<!--        app:layout_constraintLeft_toRightOf="@+id/andriodButton"-->
<!--        tools:layout_editor_absoluteY="149dp" />-->
<!--    -->
    <Button
        android:id="@+id/center"
        app:layout_constraintTop_toTopOf="@id/andriodButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Center"/>

    <TextView
        android:id="@+id/textViewone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="One"
        app:layout_constraintCircle="@id/center"
        app:layout_constraintCircleRadius="100dp"
        app:layout_constraintCircleAngle="45"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>